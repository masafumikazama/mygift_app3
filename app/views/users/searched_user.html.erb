<h1>User Registries</h1>

<div align="center">
<p><%= @user.name %></p>

<table class = "table-bordered table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Welcom message</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @registries.each do |registry| %>
      <tr>
        <td><%= registry.title %></td>
        <td><%= registry.welcome_message %></td>
        <td><%= registry.due_date %></td>
        <td><%= link_to 'Show', searched_registry_path(registry.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table><br/>

<%= link_to 'Back', :back %>
</div>