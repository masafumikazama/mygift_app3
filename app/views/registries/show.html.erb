<h1>Gifts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Target price</th>
      <th>Description</th>
      <th>Registry</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gifts.each do |gift| %>
      <tr>
        <td><%= gift.title %></td>
        <td><%= gift.target_price %></td>
        <td><%= gift.description %></td>
        <td><%= gift.registry %></td>
        <td><%= link_to 'Show', gift %></td>
        <td><%= link_to 'Edit', edit_gift_path(gift) %></td>
        <td><%= link_to 'Destroy', gift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

